<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <View
      android:id="@+id/ebm__menu_overlay"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

  <LinearLayout
      android:id="@+id/ebm__menu_middle_container"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:orientation="vertical">

    <ImageButton
        android:id="@+id/ebm__menu_middle_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/ebm__menu_middle_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:maxLines="3"
        android:lines="3"/>

  </LinearLayout>

  <LinearLayout
      android:id="@+id/ebm__menu_left_container"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:orientation="vertical">


    <ImageButton
        android:id="@+id/ebm__menu_left_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/ebm__menu_left_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:lines="3"
        android:maxLines="3"/>

  </LinearLayout>

  <LinearLayout
      android:id="@+id/ebm__menu_right_container"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:orientation="vertical">


    <ImageButton
        android:id="@+id/ebm__menu_right_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/ebm__menu_right_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:lines="3"
        android:maxLines="3"/>
  </LinearLayout>

  <ImageButton
      android:id="@+id/ebm__menu_close_image"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_alignParentRight="true"
      android:layout_alignParentBottom="true"/>


</RelativeLayout>