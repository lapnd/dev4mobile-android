<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.dev4mob.app" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="cn.dev4mob.app.AwesomeApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cn.dev4mob.app.ui.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.dev4mob.app.ui.activity.DrawerActivity"
            android:label="@string/title_activity_drawer" >
        </activity>
        <activity
            android:name="cn.dev4mob.app.ui.activity.PicassoActivity"
            android:label="@string/title_activity_picasso" >
        </activity>
    </application>

</manifest>
